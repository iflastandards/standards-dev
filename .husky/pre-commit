#!/usr/bin/env sh
# Pre-commit hook for IFLA Standards project
# Runs essential checks before allowing commits

echo "ğŸ” Running pre-commit checks..."

# 1. Run TypeScript type checking (fast, catches major issues)
echo "ğŸ“ Checking TypeScript..."
pnpm typecheck
if [ $? -ne 0 ]; then
  echo "âŒ TypeScript errors found. Please fix before committing."
  exit 1
fi

# 2. Run ESLint (code quality)
echo "ğŸ”§ Running ESLint..."
pnpm lint --quiet
if [ $? -ne 0 ]; then
  echo "âŒ ESLint errors found. Please fix before committing."
  exit 1
fi

# 3. Run unit tests (fast feedback on component changes)
echo "ğŸ§ª Running unit tests..."
pnpm test --run
if [ $? -ne 0 ]; then
  echo "âŒ Unit tests failed. Please fix before committing."
  exit 1
fi

# 4. Quick configuration validation (for config changes)
echo "âš™ï¸  Validating site configurations..."
node scripts/test-site-builds.js --site all --env local --skip-build
if [ $? -ne 0 ]; then
  echo "âŒ Site configuration validation failed."
  exit 1
fi

echo "âœ… All pre-commit checks passed!"