#!/usr/bin/env sh
# Gentle Pre-push reminder for IFLA Standards project
# Just reminds about testing, doesn't force it

BRANCH=$(git branch --show-current)
LAST_TEST_FILE=".git/.last-regression-test"
CURRENT_COMMIT=$(git rev-parse HEAD)

echo "ğŸš€ Preparing to push to branch: $BRANCH"

# Function to check if regression tests have been run recently
check_recent_tests() {
  if [ -f "$LAST_TEST_FILE" ]; then
    LAST_TEST_COMMIT=$(cat "$LAST_TEST_FILE")
    # Check if current commit is descendant of last tested commit
    if git merge-base --is-ancestor "$LAST_TEST_COMMIT" "$CURRENT_COMMIT" 2>/dev/null; then
      return 0  # Tests are recent
    fi
  fi
  return 1  # Tests may be stale
}

# Function to show testing recommendations
show_recommendations() {
  echo ""
  echo "ğŸ’¡ Testing Recommendations:"
  echo ""
  
  # Check what files changed
  CHANGED_FILES=$(git diff --name-only @{u}..HEAD 2>/dev/null || git diff --name-only HEAD~1..HEAD)
  
  if echo "$CHANGED_FILES" | grep -qE '^(packages/|libs/)'; then
    echo "   ğŸ“¦ Package changes detected"
    echo "   ğŸ”§ Suggested: pnpm test:regression:optimized"
  elif echo "$CHANGED_FILES" | grep -qE '^(portal/|standards/)'; then
    echo "   ğŸ“„ Site content changes detected"
    echo "   ğŸ”§ Suggested: pnpm test:regression:fast"
  elif echo "$CHANGED_FILES" | grep -qE '^(scripts/|\.github/)'; then
    echo "   âš™ï¸  Infrastructure changes detected"
    echo "   ğŸ”§ Suggested: pnpm test:regression:affected"
  else
    echo "   ğŸ“ General changes detected"
    echo "   ğŸ”§ Suggested: pnpm test:regression:fast"
  fi
  
  echo ""
  echo "   âš¡ All options are fast thanks to Nx caching!"
  echo "   ğŸ“Š Performance comparison: node scripts/regression-performance-comparison.js"
  echo ""
}

# Check test status
if check_recent_tests; then
  echo "âœ… Recent regression tests found - you're good to go!"
else
  echo "â„¹ï¸  No recent regression tests found"
  
  # Only show recommendations for protected branches or if user wants them
  if [ "$BRANCH" = "main" ] || [ "$BRANCH" = "dev" ]; then
    echo "ğŸ”’ Protected branch - consider running tests before pushing"
    show_recommendations
  else
    echo "ğŸ“ Feature branch - tests are optional but recommended"
    echo "ğŸ’¡ Run 'pnpm test:regression:fast' for quick validation"
  fi
fi

echo "ğŸš€ Proceeding with push..."
exit 0